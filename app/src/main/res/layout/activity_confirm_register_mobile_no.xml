<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmRegisterMobileNoActivity"
    android:orientation="vertical"
    android:layout_margin="16sp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:lottie_rawRes="@raw/first"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/etConfirmRegisterMobileNo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:fontFamily="@font/allerta"
        android:hint="@string/enter_register_mobile_number"
        android:inputType="number"
        android:maxLength="10"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/et_bg_shape"
        android:paddingLeft="16sp"
        android:paddingEnd="16dp"
        android:layout_marginTop="20dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnConfirmRegisterMobileNoVerify"
        android:text="Verify"
        android:textColor="@color/white"
        android:background="@drawable/shape"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/allerta"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_gravity="center"/>




</LinearLayout>